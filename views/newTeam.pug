extends layout

block content
  .container-xl.py-5.bg-dark.hero-header.mt-5
    .container.py-5.mt-5
      .row.justify-content-center
        .col-md-6
          h1.text-white.mb-4 Maak jouw team aan
          #message-container
          form#registerForm(method="POST" action="/api/new_team")
            .row.g-3.my-4
              .col-md-6
                .form-floating
                  input.form-control(type="text" id="teamName" name="teamName" required)
                  label(for="teamName") Teamnaam:
              .col-md-6
                .form-floating
                  input.form-control(type="email" id="emailTeammate" name="emailTeammate" required)
                  label(for="emailTeammate") E-mail van teamgenoot:
            .d-grid.mt-3
              button.btn.btn-primary.py-3(type="submit") Maak aan


block scripts
  script(src="/scripts/newTeam.js")