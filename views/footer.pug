script(src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js")

script.
  document.addEventListener('DOMContentLoaded', () => {
  if (!document.getElementById('map') || !window.L) return;

  const coords = [51.0443, 3.6881];
  const map = L.map('map', { scrollWheelZoom: false }).setView(coords, 14);
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19 }).addTo(map);
  L.marker(coords).addTo(map);

  // Retry invalidation for a few times in case of animation delays
  let attempts = 0;
  const maxAttempts = 8;
  const timer = setInterval(() => {
    attempts++;
    map.invalidateSize(true);
    // Check if the tiles are laid out reasonably by looking at one tile width in DOM
    const tile = document.querySelector('#map .leaflet-tile');
    if (tile) {
      const w = tile.style.width || tile.getAttribute('width') || tile.naturalWidth || 0;
      if (parseInt(w, 10) > 0 && parseInt(w, 10) <= 512) {
        clearInterval(timer);
        console.log('Map tiles look normal; stopped retries');
      }
    }
    if (attempts >= maxAttempts) {
      clearInterval(timer);
      console.warn('Stopped map invalidate retries');
    }
  }, 350);
});
